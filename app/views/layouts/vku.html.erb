<script>
    $(function() {
        $('#demo').marquee({

            // enable the plugin
            enable: true, //plug-in is enabled

            // scroll direction
            // 'vertical' or 'horizontal'
            direction: 'vertical',

            // children items
            itemSelecter: 'li',

            // animation delay
            delay: 3000,

            // animation speed
            speed: 1,

            // animation timing
            timing: 1,

            // mouse hover to stop the scroller
            mouse: true

        });

    });

</script>
